{
  "$defs": {
    "FindingSeverity": {
      "enum": [
        "info",
        "low",
        "medium",
        "high",
        "critical"
      ],
      "title": "FindingSeverity",
      "type": "string"
    },
    "FindingStatus": {
      "enum": [
        "open",
        "in_progress",
        "verified",
        "closed"
      ],
      "title": "FindingStatus",
      "type": "string"
    },
    "FindingType": {
      "enum": [
        "bug",
        "vuln",
        "behavior",
        "hypothesis",
        "todo"
      ],
      "title": "FindingType",
      "type": "string"
    },
    "IndexEntry": {
      "additionalProperties": false,
      "properties": {
        "component": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Component"
        },
        "confidence": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Confidence"
        },
        "created_at": {
          "format": "date-time",
          "title": "Created At",
          "type": "string"
        },
        "file": {
          "title": "File",
          "type": "string"
        },
        "id": {
          "title": "Id",
          "type": "string"
        },
        "severity": {
          "anyOf": [
            {
              "$ref": "#/$defs/FindingSeverity"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "status": {
          "$ref": "#/$defs/FindingStatus"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "title": "Tags",
          "type": "array"
        },
        "title": {
          "title": "Title",
          "type": "string"
        },
        "type": {
          "$ref": "#/$defs/FindingType"
        },
        "updated_at": {
          "format": "date-time",
          "title": "Updated At",
          "type": "string"
        }
      },
      "required": [
        "id",
        "file",
        "status",
        "type",
        "title",
        "created_at",
        "updated_at"
      ],
      "title": "IndexEntry",
      "type": "object"
    }
  },
  "$id": "https://schemas.re-kb/v1/index.schema.json",
  "additionalProperties": false,
  "properties": {
    "findings": {
      "items": {
        "$ref": "#/$defs/IndexEntry"
      },
      "title": "Findings",
      "type": "array"
    },
    "project_id": {
      "title": "Project Id",
      "type": "string"
    },
    "schema_version": {
      "default": "2.0",
      "description": "Schema version for migration support",
      "title": "Schema Version",
      "type": "string"
    }
  },
  "required": [
    "project_id"
  ],
  "title": "Index",
  "type": "object"
}
